//Develop a C function ISPRIME (num) that accepts an integer argument and returns 1 if the argument is prime, a 0 otherwise. Write a C program that invokes this function to generate prime numbers between the given ranges.
#include <stdio.h>
#include <math.h> 
int ISPRIME(int a) {
    if (a <= 1)
        return 0; 
    if (a == 2)
        return 1; 
    if (a % 2 == 0)
        return 0; 

    for (int i = 3; i <= sqrt(a); i += 2) {
        if (a % i == 0)
            return 0;
    }
    return 1;
}
int main() {
    int l, u;
    printf("Enter the lower limit: ");
    scanf("%d", &l);
    printf("Enter the upper limit: ");
    scanf("%d", &u);
    if (l > u) {
        printf("Invalid range! Lower limit must be <= upper limit.\n");
        return 1;
    }
    printf("Prime numbers between %d and %d are:\n", l, u);
    for (int i = l; i <= u; i++) {
        if (ISPRIME(i))
            printf("%d ", i);
    }
    printf("\n");
    return 0;
}
